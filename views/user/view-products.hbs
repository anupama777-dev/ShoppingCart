<section>
    <div class="container">
        <div class="row">
            {{#each products}}
            <div class="col-md-3 p-3">
                <div class="card"
                    style="width: 16rem; height: 28rem; border-width: 2px; border-style: solid; border-color: black;">
                    <img src="/product-images/{{this._id}}.jpg" class="card-img-top" alt="..." style="height: 12rem">
                    <div class="card-body">
                        <h5 class="card-title">{{this.Name}}</h5>
                        <p class="card-text">{{this.Description}}</p>
                        <p class="card-text"><b>â‚¹{{this.Price}}</b></p>
                        <button onclick="addToCart('{{this._id}}')" class="btn btn-primary"><b>Add to Cart</b></button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>
<script src="/javascripts/script.js"></script>
<style>
    body {
        background: rgb(158, 210, 255);
    }
</style>