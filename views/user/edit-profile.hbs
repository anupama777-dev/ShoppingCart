<section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center">Edit Profile</h2>
                <form action="/edit-profile/{{user._id}}" method="POST">
                    <label for="">Name</label>
                    <input type="text" name="Name" class="form-control" value="{{user.Name}}">

                    <label for="">Email</label>
                    <input type="text" name="Email" class="form-control" value="{{user.Email}}">

                    <label for="">Address</label>
                    <input type="text" name="Address" class="form-control" value="{{user.Address}}">

                    <label for="">Pincode</label>
                    <input type="text" name="Pincode" class="form-control" value="{{user.Pincode}}">

                    <label for="">Phone</label>
                    <input type="text" name="Mobile" class="form-control" value="{{user.Phone}}">

                    <button type="submit" class="btn btn-primary mt-4" >Save changes</button>
                </form>
            </div>
        </div>
    </div>
</section>
<style>
    body{
        background: rgb(158, 210, 255);
    }
</style>